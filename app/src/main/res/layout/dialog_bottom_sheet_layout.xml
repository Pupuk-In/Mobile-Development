    <TextView
        android:id="@+id/rating3_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_black_outline"
        android:fontFamily="@font/inter"
        android:paddingHorizontal="8dp"
        android:paddingVertical="5dp"
        android:text="Rating 3"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/rating4_filter"
        app:layout_constraintTop_toBottomOf="@+id/textViewrating" />

    <TextView
        android:id="@+id/rating2_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_black_outline"
        android:fontFamily="@font/inter"
        android:paddingHorizontal="8dp"
        android:paddingVertical="5dp"
        android:text="Rating 2"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/rating3_filter"
        app:layout_constraintTop_toBottomOf="@+id/textViewrating" />


    <TextView
        android:id="@+id/rating1_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_black_outline"
        android:fontFamily="@font/inter"
        android:paddingHorizontal="8dp"
        android:paddingVertical="5dp"
        android:text="Rating 1"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/rating2_filter"
        app:layout_constraintTop_toBottomOf="@+id/textViewrating" />


    <TextView
        android:id="@+id/textViewtanaman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter_medium"
        android:text="Tanaman"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating5_filter" />

    <TextView
        android:id="@+id/tomat_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_black_outline"
        android:fontFamily="@font/inter"
        android:paddingHorizontal="8dp"
        android:paddingVertical="5dp"
        android:text="Tomat"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewtanaman" />

    <TextView
        android:id="@+id/kentang_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_black_outline"
        android:fontFamily="@font/inter"
        android:paddingHorizontal="8dp"
        android:paddingVertical="5dp"
        android:text="Kentang"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/tomat_filter"
        app:layout_constraintTop_toBottomOf="@+id/textViewtanaman" />

    <TextView
        android:id="@+id/wortel_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_black_outline"
        android:fontFamily="@font/inter"
        android:paddingHorizontal="8dp"
        android:paddingVertical="5dp"
        android:text="Wortel"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/kentang_filter"
        app:layout_constraintTop_toBottomOf="@+id/textViewtanaman" />

    <TextView
        android:id="@+id/padi_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_black_outline"
        android:fontFamily="@font/inter"
        android:paddingHorizontal="8dp"
        android:paddingVertical="5dp"
        android:text="Padi"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/wortel_filter"
        app:layout_constraintTop_toBottomOf="@+id/textViewtanaman" />

