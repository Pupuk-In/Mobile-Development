    <TextView
        android:id="@+id/kcl_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_black_outline"
        android:fontFamily="@font/inter"
        android:paddingHorizontal="8dp"
        android:paddingVertical="5dp"
        android:text="KCL"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/tsp_filter"
        app:layout_constraintTop_toBottomOf="@+id/textViewjenis" />


    <TextView
        android:id="@+id/phonska_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_black_outline"
        android:fontFamily="@font/inter"
        android:paddingHorizontal="8dp"
        android:paddingVertical="5dp"
        android:text="Phonska"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/kcl_filter"
        app:layout_constraintTop_toBottomOf="@+id/textViewjenis" />


    <TextView
        android:id="@+id/textViewurutkan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter_medium"
        android:text="Urutkan"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/npk_filter" />

    <TextView
        android:id="@+id/palingsesuai_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter"
        android:text="Paling Sesuai"
        android:paddingVertical="5dp"
        android:paddingHorizontal="8dp"
        android:background="@drawable/button_black_outline"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewurutkan" />


    <TextView
